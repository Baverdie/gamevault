# Production Environment Variables

# Database (use your production PostgreSQL URL)
DATABASE_URL="postgresql://user:password@host:5432/gamevault?schema=public"

# Redis (use your production Redis URL)
REDIS_URL="redis://host:6379"

# JWT Secret (MUST be changed - generate with: openssl rand -base64 32)
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING"

# Server
PORT=3001
NODE_ENV="production"

# RAWG API Key
RAWG_API_KEY="your-rawg-api-key"

# Frontend URL
FRONTEND_URL="https://your-frontend-domain.com"

# PostgreSQL Password for Docker Compose
POSTGRES_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"